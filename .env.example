# ============================================
# Database
# ============================================
DATABASE_URL="file:./dev.db"

# ============================================
# Session
# ============================================
SESSION_SECRET="change-this-to-a-random-string-in-production"

# ============================================
# SMTP Configuration for Email OTP
# ============================================
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
SMTP_FROM="your-email@gmail.com"

# ============================================
# Admin User
# ============================================
ADMIN_EMAIL="admin@example.com"
ADMIN_PASSWORD="email"

# ============================================
# AWS S3 Configuration
# ============================================

# Storage Type: "local" for local filesystem, "s3" for AWS S3, "localstack" for LocalStack emulator
STORAGE_TYPE="local"

# AWS S3 Settings (required when STORAGE_TYPE="s3" or "localstack")
AWS_REGION="us-east-1"
AWS_S3_BUCKET="your-transcripts-bucket"

# AWS Credentials
# Option 1: Access Keys (for local dev or EC2 without IAM role)
AWS_ACCESS_KEY_ID="your-access-key-id"
AWS_SECRET_ACCESS_KEY="your-secret-access-key"

# Option 2: Use IAM Role (for EC2/ECS/Lambda - leave credentials empty)
# AWS_ACCESS_KEY_ID=""
# AWS_SECRET_ACCESS_KEY=""

# LocalStack Configuration (only needed if STORAGE_TYPE="localstack")
AWS_ENDPOINT_URL="http://localhost:4566"

# Local File Path (only needed if STORAGE_TYPE="local")
LOCAL_TRANSCRIPTS_PATH="./public/audio/transcripts"