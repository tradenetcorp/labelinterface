// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        Int         @id @default(autoincrement())
  email     String      @unique
  name      String?
  password  String?     // Hashed password (optional, for admin/password login)
  role      String      @default("user") // "user" | "admin"
  active    Boolean     @default(true)
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  sessions           Session[]
  codes              LoginCode[]
  activityLogs       ActivityLog[]
  reviewedTranscripts Transcript[]
}

model LoginCode {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    Int
  codeHash  String
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime @default(now())
}

model Session {
  id        String   @id // crypto.randomUUID() or similar
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    Int
  createdAt DateTime @default(now())
  expiresAt DateTime
}

model ActivityLog {
  id        Int      @id @default(autoincrement())
  userId    Int?
  user      User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  action    String   // "login_request", "page_view", "transcript_submit", etc.
  category  String   // "auth", "admin", "page", "transcript"
  status    String   // "success", "failure", "error"
  metadata  String?  // JSON string with additional details
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([action])
  @@index([createdAt])
}

model Transcript {
  id            Int       @id @default(autoincrement())
  
  // S3 Storage References
  s3AudioKey    String    // S3 key for audio file (e.g., "transcripts/audio-123.mp3")
  s3TextKey     String?   // Optional: S3 key for transcript text file (if stored separately)
  
  // Transcript Content
  originalText  String    // Original transcript text (from S3 or initial processing)
  editedText    String?   // User-edited transcript text
  
  // Status Tracking
  status        String    @default("pending") // "pending", "completed", "skipped"
  markedCorrect Boolean   @default(false)
  labels        String?   // JSON string of selected labels (e.g., '["Male", "Dhivehi"]')
  
  // User Tracking (optional)
  reviewedById  Int?
  reviewedBy    User?     @relation(fields: [reviewedById], references: [id], onDelete: SetNull)
  
  // Timestamps
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  @@index([status])
  @@index([createdAt])
  @@index([reviewedById])
}
